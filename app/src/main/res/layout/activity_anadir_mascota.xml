<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mascotas.activities.AnadirMascotaActivity">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Otro"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/otro_icon"
        app:layout_constraintStart_toStartOf="@+id/otro_icon"
        app:layout_constraintTop_toBottomOf="@+id/otro_icon" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Reptil"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/reptil_icon"
        app:layout_constraintStart_toStartOf="@+id/reptil_icon"
        app:layout_constraintTop_toBottomOf="@+id/reptil_icon" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/razaEspecie"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="24dp"
        android:enabled="false"
        app:layout_constraintBottom_toTopOf="@+id/nombre"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/perro_icon">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/especie_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Raza o especie" />
    </com.google.android.material.textfield.TextInputLayout>

    <ImageView
        android:id="@+id/perro_icon"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        app:layout_constraintBottom_toTopOf="@+id/razaEspecie"
        app:layout_constraintEnd_toStartOf="@+id/gato_icon"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread"
        app:srcCompat="@drawable/dog" />

    <ImageView
        android:id="@+id/gato_icon"
        android:layout_width="46dp"
        android:layout_height="46dp"
        app:layout_constraintEnd_toStartOf="@+id/roedor_icon"
        app:layout_constraintStart_toEndOf="@+id/perro_icon"
        app:layout_constraintTop_toTopOf="@+id/perro_icon"
        app:srcCompat="@drawable/kitty" />

    <ImageView
        android:id="@+id/roedor_icon"
        android:layout_width="46dp"
        android:layout_height="46dp"
        app:layout_constraintEnd_toStartOf="@+id/ave_icon"
        app:layout_constraintStart_toEndOf="@+id/gato_icon"
        app:layout_constraintTop_toTopOf="@+id/gato_icon"
        app:srcCompat="@drawable/hamster" />

    <ImageView
        android:id="@+id/ave_icon"
        android:layout_width="46dp"
        android:layout_height="46dp"
        app:layout_constraintEnd_toStartOf="@+id/reptil_icon"
        app:layout_constraintStart_toEndOf="@+id/roedor_icon"
        app:layout_constraintTop_toTopOf="@+id/roedor_icon"
        app:srcCompat="@drawable/bird" />

    <ImageView
        android:id="@+id/reptil_icon"
        android:layout_width="46dp"
        android:layout_height="46dp"
        app:layout_constraintEnd_toStartOf="@+id/otro_icon"
        app:layout_constraintStart_toEndOf="@+id/ave_icon"
        app:layout_constraintTop_toTopOf="@+id/ave_icon"
        app:srcCompat="@drawable/chameleon" />

    <ImageView
        android:id="@+id/otro_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/reptil_icon"
        app:layout_constraintTop_toTopOf="@+id/reptil_icon"
        app:srcCompat="@drawable/circle" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Perro"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/perro_icon"
        app:layout_constraintStart_toStartOf="@+id/perro_icon"
        app:layout_constraintTop_toBottomOf="@+id/perro_icon" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Gato"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/gato_icon"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/gato_icon"
        app:layout_constraintTop_toBottomOf="@+id/gato_icon" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Roedor"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/roedor_icon"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/roedor_icon"
        app:layout_constraintTop_toBottomOf="@+id/roedor_icon" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Pájaro"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/ave_icon"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/ave_icon"
        app:layout_constraintTop_toBottomOf="@+id/ave_icon" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="@+id/otro_icon"
        app:layout_constraintTop_toTopOf="@+id/otro_icon"
        app:srcCompat="@drawable/tarantula" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@+id/otro_icon"
        app:layout_constraintTop_toTopOf="@+id/otro_icon"
        app:srcCompat="@drawable/cow" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toTopOf="@+id/textView6"
        app:layout_constraintStart_toStartOf="@+id/otro_icon"
        app:srcCompat="@drawable/fish" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView9"
        app:layout_constraintEnd_toEndOf="@+id/otro_icon"
        app:srcCompat="@drawable/goat" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/nombre"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:enabled="false"
        app:layout_constraintBottom_toTopOf="@+id/chip"
        app:layout_constraintEnd_toStartOf="@+id/edad"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/razaEspecie"
        app:layout_constraintTop_toBottomOf="@+id/razaEspecie">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/nombre_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/edad"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:enabled="false"
        app:layout_constraintEnd_toEndOf="@+id/razaEspecie"
        app:layout_constraintStart_toEndOf="@+id/nombre"
        app:layout_constraintTop_toTopOf="@+id/nombre">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edad_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Edad" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/chip"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:enabled="false"
        app:layout_constraintBottom_toTopOf="@+id/veterinario"
        app:layout_constraintEnd_toEndOf="@+id/edad"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/nombre"
        app:layout_constraintTop_toBottomOf="@+id/nombre">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/chip_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Número de Chip" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/veterinario"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:enabled="false"
        app:layout_constraintBottom_toTopOf="@+id/boton_anadir"
        app:layout_constraintEnd_toEndOf="@+id/chip"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/chip"
        app:layout_constraintTop_toBottomOf="@+id/chip">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/veterianario_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Veterinario de Preferencia" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/boton_anadir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:enabled="false"
        android:text="Añadir Mascota"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/veterinario"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/veterinario"
        app:layout_constraintTop_toBottomOf="@+id/veterinario" />


</androidx.constraintlayout.widget.ConstraintLayout>